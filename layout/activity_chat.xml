<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gboron.ekpei.counsellingusers.ChatActivity">

    <include layout="@layout/app_bar_layout"
        android:id="@+id/chatappbared"/>

<ProgressBar
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/mps"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    />
    <android.support.v7.widget.RecyclerView
        android:background="@color/colorback"
        android:layout_width="match_parent"
        android:id="@+id/chatrecy"
        android:layout_below="@+id/chatappbared"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/cardView14"

        >


    </android.support.v7.widget.RecyclerView>






    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorback"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/cardView14">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:orientation="horizontal">


            <ImageButton
                android:layout_marginTop="12dp"
                android:background="@color/colorback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/imagesbtn"
                android:id="@+id/imgbtn"/>




    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="12dp"
        app:cardElevation="15dp"
        >

            <EditText

                android:background="@color/mediumpurple"
                android:textColor="#ffffff"
              android:paddingLeft="9dp"
                android:id="@+id/message"
                android:layout_width="199dp"
                android:layout_height="wrap_content"
                android:hint="type your messages here " />

    </android.support.v7.widget.CardView>

            <ImageButton
                android:layout_marginTop="12dp"
                android:background="@color/colorback"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/send"
                android:id="@+id/snding"/>

        </LinearLayout>


    </android.support.v7.widget.CardView>







</RelativeLayout>
