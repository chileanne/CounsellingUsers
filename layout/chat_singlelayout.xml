<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/ij"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <android.support.v7.widget.CardView
        android:id="@+id/recievercard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="5dp">



        <LinearLayout
            android:background="@color/mediumpurple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:paddingRight="5dp"
                android:paddingLeft="4dp"
                android:text="hy"
                android:textColor="#ffffff"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chat_textreciever"
                android:maxWidth="230dp"
                android:textSize="20sp"
                />

            <ImageView android:visibility="gone"
                android:layout_width="250dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_height="match_parent"
                android:id="@+id/imgreciver"
                android:src="@drawable/ava"
                android:layout_marginTop="4dp"/>
        </LinearLayout>


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        app:cardCornerRadius="10dp"
        android:id="@+id/sendercard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/purple"
        app:cardElevation="20dp"
        android:layout_marginRight="19dp"
        android:layout_below="@+id/recievercard"
        android:layout_marginTop="6dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TextView


                android:text="hy"
                android:textColor="@color/white"
                android:paddingLeft="4dp"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chat_textsender"
                android:maxWidth="210dp"
                android:textSize="20sp"
                />
            <ImageView
                android:layout_marginTop="1dp"
                android:layout_gravity="end"
                android:layout_marginLeft="45dp"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/chck"
                android:id="@+id/sendercheck"/>

            <ImageView

                android:layout_width="250dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_height="match_parent"
                android:id="@+id/senderimage"
                android:src="@drawable/ava"
                />

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@mipmap/chck"
                android:id="@+id/sendercheckimg"/>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>