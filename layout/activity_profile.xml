<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    tools:context="com.gboron.ekpei.counsellingusers.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <include layout="@layout/app_bar_layout"
        android:id="@+id/appbarss"/>

    <ImageView
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="228dp"
        android:src="@drawable/ava"
        android:id="@+id/insertimageview"
        />


    <android.support.v7.widget.CardView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        app:cardBackgroundColor="@color/colorback"
        app:cardCornerRadius="20dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Bio"
            android:textColor="#ffffff"
            android:textSize="30sp" />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
            android:layout_marginTop="19dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorback"
            app:cardCornerRadius="20dp"
            android:layout_above="@+id/cardView11"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:id="@+id/cardView12">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            <TextView
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAME:"
                android:layout_marginLeft="9dp"
                android:textSize="25sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:id="@+id/nametextview"
                android:layout_marginLeft="9dp"
                android:textColor="#ffffff" />
    </LinearLayout>
        </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorback"
        app:cardCornerRadius="20dp"
        android:id="@+id/cardView10">




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Occupation:"
            android:layout_marginLeft="9dp"
            android:textSize="25sp"
            android:textColor="#ffffff" />

        <TextView
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:id="@+id/occupationtextview"
            android:layout_marginLeft="9dp"/>

    </LinearLayout>
   </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorback"
            app:cardCornerRadius="20dp"

            >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:textColor="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hobbies:"
                    android:layout_marginLeft="9dp"
                    android:textSize="25sp"
                    />

                <TextView
                    android:textColor="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:id="@+id/hobbiestextview"
                    android:layout_marginLeft="9dp"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorback"
        app:cardCornerRadius="20dp"
        android:id="@+id/cardView9"
      >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone no:"
            android:layout_marginLeft="9dp"
            android:textSize="25sp"
            />

        <TextView
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:id="@+id/phonenotextview"
            android:layout_marginLeft="9dp"/>


    </LinearLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:layout_gravity="bottom"
        android:layout_marginTop="35dp"
        android:id="@+id/editprofilebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:text="Edit Profile"
        android:textColor="@color/colorback"
       />
    </LinearLayout>

</ScrollView>
