<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorback"
    tools:context="com.gboron.ekpei.counsellingusers.LoginActivity">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="190dp"
            android:src="@drawable/yina"
            android:layout_above="@+id/cardView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="28dp" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spin"

        android:visibility="invisible"
        android:layout_marginBottom="26dp"
        android:layout_alignBottom="@+id/cardView"
        android:layout_centerHorizontal="true" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:cardCornerRadius="20dp"
        android:layout_above="@+id/cardView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp">

        <EditText
            android:layout_gravity="center_horizontal"
            android:id="@+id/edittextemail1"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_above="@+id/edittextpassword2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="37dp"
            android:layout_marginTop="13dp"
            android:background="#ffffff"
            android:hint="Enter email"
            android:inputType="textWebEmailAddress"/>


    </android.support.v7.widget.CardView>




    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/cardView"
        app:cardCornerRadius="20dp"
        android:layout_above="@+id/buttonsignin3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="39dp">

        <EditText
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:id="@+id/edittextpassword2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonsignin3"
            android:layout_centerHorizontal="true"
            android:hint="Enter password"
            android:inputType="textPassword"
            android:background="#ffffff"/>

    </android.support.v7.widget.CardView>


    <Button
        android:id="@+id/buttonsignin3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="37dp"
        android:background="#746bae"
        android:text="signin"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/textviewsignup"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textviewsignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Register?Click to Sign up here"
        android:textColor="#ffffff"
        android:layout_marginBottom="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="forgot password"
        android:id="@+id/forgot"
        android:layout_below="@+id/buttonsignin3"
        android:layout_alignLeft="@+id/buttonsignin3"
        android:layout_alignStart="@+id/buttonsignin3"
        android:layout_marginTop="9dp" />




</RelativeLayout>
