<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#746bae"
    tools:context="com.gboron.ekpei.counsellingusers.Editing.EditprofileActivity">


    <include layout="@layout/app_bar_layout"
        android:id="@+id/appbared"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:cardCornerRadius="20dp"
        android:layout_above="@+id/cardView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="29dp">

        <EditText
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nameedittext"
            android:hint="Full Name"
            />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:cardCornerRadius="20dp"
        android:layout_above="@+id/cardView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="36dp"
        android:id="@+id/cardView8">

        <EditText
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/occupationedittext"
            android:hint="Occupation"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:cardCornerRadius="20dp"
        android:layout_above="@+id/cardView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="31dp"
        android:id="@+id/cardView7">

        <EditText
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hobbiesedittext"
            android:hint="Hobbies"/>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:cardCornerRadius="20dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/cardView6"
        android:layout_above="@+id/uploadbtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/phonenumberedittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:hint="Phone number"
            android:inputType="number"/>

    </android.support.v7.widget.CardView>


    <Button
        android:id="@+id/uploadbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#746bae"
        android:text="upload"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="138dp"
        android:textColor="#ffffff"/>
</RelativeLayout>
