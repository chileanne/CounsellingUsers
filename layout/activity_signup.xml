<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorback"
    tools:context="com.gboron.ekpei.counsellingusers.SignupActivity">


  <ImageView
      android:layout_width="match_parent"
      android:layout_height="190dp"
      android:src="@drawable/yina"
      android:layout_above="@+id/cardView3"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_marginBottom="36dp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/cardView3"
        app:cardCornerRadius="20dp"
        android:layout_marginBottom="24dp"
        android:layout_above="@+id/cardView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_marginTop="13dp"
            android:layout_gravity="center_horizontal"
            android:background="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextusername"
            android:hint="user_name"
            />


    </android.support.v7.widget.CardView>

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:id="@+id/cardView4"
    app:cardCornerRadius="20dp"
    android:layout_marginBottom="25dp"
    android:layout_above="@+id/cardView5"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextEmail"
        android:hint="Enter email"
        android:layout_marginTop="13dp"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"/>

</android.support.v7.widget.CardView>

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:id="@+id/cardView5"
    app:cardCornerRadius="20dp"
    android:layout_marginBottom="16dp"
    android:layout_above="@+id/btnRegister"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextPasword"
        android:hint="Enter password"
        android:inputType="textPassword"
        android:layout_marginTop="13dp"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"/>
</android.support.v7.widget.CardView>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnRegister"
        android:text="register user"
        android:background="@color/colorback"
        android:textColor="#ffffff"
        android:layout_above="@+id/textc"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textColor="#ffffff"
        android:id="@+id/textc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already Register? Sign in here"
        android:layout_marginBottom="18dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />




</RelativeLayout>
